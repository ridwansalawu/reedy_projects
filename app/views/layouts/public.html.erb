<!DOCTYPE html>
<html>
    <head>
      <title>Reedy Projects: Home<%= " | #{@page_title}" if @page_title %></title>
      <%= stylesheet_link_tag('application', :media => 'all') %>
    </head>
    
    <body>
        <div class="container">

            <header class="header">
              <h1>Reedy Projects</h1>
            </header>

            <nav class="navigation">
            <ul>
                <li>
                   <%= link_to("Admin", admin_path) %>
                </li>
                <li>
                   <%= link_to("Employees", employees_path) %>
                </li>
                <li>
                    <%= link_to("Assets", assets_path, :class => 'action new') %>
                </li>
                <li>
                    <%= link_to("Apply", new_applicant_path, :class => 'back-link') %>
                </li>
                <li>
                    <%= link_to("Sign Up", new_user_path, :class => 'back-link') %>
                </li>
                <li>
                    <%= link_to("Sign In", "#", :class => 'back-link') %>
                </li>
            </ul>
          
                <%= render(:partial => 'layouts/navigation', :locals => { :subjects => @subjects} ) %>
            </nav>

            <article class="content">
                <%= yield %>
            </article>

            <aside class="sidebar">
           
            </aside>

            <aside class="photos slideshow-container">


                <div class="mySlides fade">
                    <div class="numbertext">1 / 3</div>
                     <%= image_tag  "fibre.jpg", :class => "img_preview" %> 
                    <div class="text">Caption Text</div>
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">2 / 3</div>
                    <%= image_tag "fibre1.jpg", :class => "img_preview" %>
                    <div class="text">Caption Text</div>
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">3 / 3</div>
                    <%= image_tag  "fibre2.jpg", :class => "img_preview" %>
                    <div class="text">Caption Text</div>
                </div>

                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a> <br>




            </aside>
            <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span> 
            <span class="dot" onclick="currentSlide(2)"></span> 
            <span class="dot" onclick="currentSlide(3)"></span> 
            </div>

            <footer class="footer">
              <p id="copyright">&copy;<%= Time.now.year %>Reedy Projects</p>
            
            
            </footer>

        </div>

        <script>
var slideIndex = 1;
showSlides(slideIndex);

function plusSlides(n) {
  showSlides(slideIndex += n);
}

function currentSlide(n) {
  showSlides(slideIndex = n);
}

function showSlides(n) {
  var i;
  var slides = document.getElementsByClassName("mySlides");
  var dots = document.getElementsByClassName("dot");
  if (n > slides.length) {slideIndex = 1}    
  if (n < 1) {slideIndex = slides.length}
  for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";  
  }
  for (i = 0; i < dots.length; i++) {
      dots[i].className = dots[i].className.replace(" active", "");
  }
  slides[slideIndex-1].style.display = "block";  
  dots[slideIndex-1].className += " active";
}
</script>
    </body>
</html>
